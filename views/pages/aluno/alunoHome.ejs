<%- include('../../partials/head') %>

<body>
    <%- include('../../partials/navbar') %>

    <div class="container py-5">
        <h1 class="mb-4 text-center">Painel do Aluno</h1>

        <!-- Seção de Informações do Aluno -->
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center bg-primary text-white">
                <span><i class="fa fa-user me-2"></i>Minhas Informações</span>
                <button id="btnToggleInfo" class="btn btn-light btn-sm">
                    <i class="fa fa-eye"></i> Exibir informações
                </button>
            </div>
            <div id="infoContainer" class="card-body" style="display: none;">
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>Nome:</strong> <%= usuario?.nome || 'Não informado' %></p>
                        <p><strong>Email:</strong> <%= usuario?.email || 'Não informado' %></p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Turma:</strong> <span id="turmaNome">Carregando...</span></p>
                        <p><strong>Total de Atividades:</strong> <span id="totalAtividades">-</span></p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Blocos de Navegação -->
        <div class="row g-4 justify-content-center">
            <div class="col-md-6">
                <a href="/aluno/atividades" class="text-decoration-none">
                    <div class="card text-center shadow h-100 card-hover">
                        <div class="card-body py-5">
                            <i class="fa fa-file-upload fa-3x text-primary mb-3"></i>
                            <h4 class="card-title mb-2">Entregar Atividades</h4>
                            <p class="card-text text-muted">Visualize e entregue suas atividades pendentes.</p>
                            <div class="mt-3">
                                <span class="badge bg-warning text-dark fs-5" id="badgePendentes">
                                    <i class="fa fa-clock me-1"></i>- pendentes
                                </span>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-6">
                <a href="/aluno/quadro-notas" class="text-decoration-none">
                    <div class="card text-center shadow h-100 card-hover">
                        <div class="card-body py-5">
                            <i class="fa fa-chart-line fa-3x text-success mb-3"></i>
                            <h4 class="card-title mb-2">Quadro de Notas</h4>
                            <p class="card-text text-muted">Acompanhe suas notas e desempenho acadêmico.</p>
                            <div class="mt-3">
                                <span class="badge bg-info text-white fs-5" id="badgeMedia">
                                    <i class="fa fa-star me-1"></i>Média: -
                                </span>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </div>

        <!-- Cards de Estatísticas Rápidas -->
        <div class="row g-4 mt-2">
            <div class="col-md-3">
                <div class="card text-center bg-light shadow-sm">
                    <div class="card-body">
                        <i class="fa fa-tasks fa-2x text-primary mb-2"></i>
                        <h5 class="card-title mb-0" id="statTotalAtividades">0</h5>
                        <p class="card-text text-muted small">Total de Atividades</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center bg-light shadow-sm">
                    <div class="card-body">
                        <i class="fa fa-check-circle fa-2x text-success mb-2"></i>
                        <h5 class="card-title mb-0" id="statEntregues">0</h5>
                        <p class="card-text text-muted small">Entregues</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center bg-light shadow-sm">
                    <div class="card-body">
                        <i class="fa fa-clock fa-2x text-warning mb-2"></i>
                        <h5 class="card-title mb-0" id="statPendentes">0</h5>
                        <p class="card-text text-muted small">Pendentes</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center bg-light shadow-sm">
                    <div class="card-body">
                        <i class="fa fa-star fa-2x text-info mb-2"></i>
                        <h5 class="card-title mb-0" id="statMediaGeral">-</h5>
                        <p class="card-text text-muted small">Média Geral</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../../partials/footer') %>

    <script>
        document.getElementById('btnToggleInfo').addEventListener('click', function () {
            const infoDiv = document.getElementById('infoContainer');
            if (infoDiv.style.display === 'none') {
                infoDiv.style.display = 'block';
                this.innerHTML = '<i class="fa fa-eye-slash"></i> Ocultar informações';
            } else {
                infoDiv.style.display = 'none';
                this.innerHTML = '<i class="fa fa-eye"></i> Exibir informações';
            }
        });

        async function carregarEstatisticas() {
            try {
                // Buscar estatísticas reais do aluno
                const response = await fetch('/api/aluno/atividades/estatisticas');
                const data = await response.json();

                if (data.sucesso && data.dados) {
                    const stats = data.dados;
                    
                    // Atualizar cards de estatísticas
                    document.getElementById('statTotalAtividades').textContent = stats.total_atividades || 0;
                    document.getElementById('statEntregues').textContent = stats.total_entregues || 0;
                    document.getElementById('statPendentes').textContent = stats.pendentes || 0;
                    
                    // Calcular e exibir média geral
                    const mediaGeral = stats.media_geral 
                        ? parseFloat(stats.media_geral).toFixed(1)
                        : '-';
                    document.getElementById('statMediaGeral').textContent = mediaGeral;
                    
                    // Atualizar badges nos cards principais
                    document.getElementById('badgePendentes').innerHTML = 
                        `<i class="fa fa-clock me-1"></i>${stats.pendentes || 0} pendentes`;
                    document.getElementById('badgeMedia').innerHTML = 
                        `<i class="fa fa-star me-1"></i>Média: ${mediaGeral}`;
                    
                    // Atualizar total de atividades no bloco de informações
                    document.getElementById('totalAtividades').textContent = stats.total_atividades || 0;
                }

                // Buscar informações da turma do aluno
                await carregarInfoTurma();
            } catch (error) {
                console.error('❌ Erro ao carregar estatísticas:', error);
            }
        }

        async function carregarInfoTurma() {
            try {
                // Buscar atividades para pegar informação da turma
                const response = await fetch('/api/aluno/atividades/listar');
                const data = await response.json();

                if (data.sucesso && data.dados && data.dados.length > 0) {
                    // Pegar turma da primeira atividade
                    const turma = data.dados[0].turma;
                    document.getElementById('turmaNome').textContent = turma || 'Não matriculado';
                } else {
                    document.getElementById('turmaNome').textContent = 'Não matriculado';
                }
            } catch (error) {
                console.error('❌ Erro ao carregar info da turma:', error);
                document.getElementById('turmaNome').textContent = 'Erro ao carregar';
            }
        }

        // Carrega estatísticas ao abrir a página
        document.addEventListener('DOMContentLoaded', carregarEstatisticas);
    </script>

    <style>
        .card-hover:hover {
            box-shadow: 0 0 1rem rgba(0, 123, 255, 0.3);
            transform: translateY(-5px) scale(1.02);
            transition: all 0.3s ease;
        }

        .badge {
            font-size: 0.9rem;
            padding: 0.5rem 1rem;
        }

        .card-body i {
            transition: transform 0.3s ease;
        }

        .card-hover:hover i {
            transform: scale(1.1);
        }
    </style>
</body>
</html>